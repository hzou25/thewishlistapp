<h1>Welcome to <%= @group.name %> (Group show page)</h1>

<h2>Members:</h2>
<ul>
<% @users.each do |user| %>
  <li><%= user.email %></li>
<% end %>
</ul>

<h2>Wishlists</h2>
<% @group.wishlists.each do |wishlist| %>
  <p>
    <strong>Wishlist:</strong>
    <%= wishlist.name %>
  </p>
<% end %>


<h2>Create a wishlist:</h2>
<%= link_to 'New wishlist', new_group_wishlist_url(@group) %>


<p>
<%= link_to 'Back', groups_path %>
</p>
